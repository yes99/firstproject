        <label class="form-label"> 제목 </label>
        <input type="text" class="form-control" name="title">
    </div>
    <div class = "mb-3">
        <label class="form-label"> 수행과제 </label>
        <textarea class="form-control"  rows="10" name="assign"></textarea>
    </div>
    <div class = "mb-3">
        <label class="form-label"> 수행과정 </label>
        <textarea class="form-control"  rows="10" name="perform"></textarea>
    </div>
    <div class = "mb-3">
        <label class="form-label"> 실패 사례 </label>
        <textarea class="form-control"  rows="10" name="fail"></textarea>
    </div>
